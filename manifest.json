{
    "manifest_version": 3,
    "name": "Lucid",
    "description": "Introducing Lucid, the ultimate relaxation companion for your browser. Lucid is a Chrome extension that provides a collection of calming and soothing sounds to help you unwind and destress.",
    "version": "1.0",
    "action": {
        "default_popup": "background.html",
        "default_icon": "images/icon-128.png"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "background.service_worker":"background.html"
    },
    "permissions": [
        "storage",
        "activeTab"
    ]
}